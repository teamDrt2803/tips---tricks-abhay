<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/se"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simultaneous Equations"
        android:textAlignment="center"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Choose Your Option"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_below="@id/se"
        />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="1"
        android:layout_below="@id/option"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >

        <Button
            android:id="@+id/onevariable"
            android:text="One Variable"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="50dp"

            />

        <Button
            android:id="@+id/twovariables"
            android:text="Two Variables"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/threevariables"
            android:text="Three Variables"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            />


    </GridLayout>

</RelativeLayout>